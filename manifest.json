{
    "manifest_version": 3,
    "name": "SF Loader",
    "version": "0.2.0",
    "description": "Load, inspect, and export Salesforce data with ease. Run SOQL queries and download results as CSV.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "downloads",
        "identity"
    ],
    "host_permissions": [
        "https://*.salesforce.com/*",
        "https://*.my.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.lightning.force.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.salesforce.com/*",
                "https://*.my.salesforce.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "assets/styles.css"
            ],
            "matches": [
                "https://*.salesforce.com/*",
                "https://*.my.salesforce.com/*"
            ]
        }
    ]
}