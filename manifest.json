{
    "manifest_version": 3,
    "name": "Salesforce Inspector (Session)",
    "version": "0.1.0",
    "description": "Inspector that uses logged-in Salesforce session (no OAuth).",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "downloads",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.salesforce.com/*",
        "https://*.my.salesforce.com/*",
        "https://login.salesforce.com/*",
        "https://test.salesforce.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.salesforce.com/*",
                "https://*.my.salesforce.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html"
}